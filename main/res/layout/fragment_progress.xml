<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/progress_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Daily Progress Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_daily_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/progress_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/daily_progress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Progress"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/daily_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps: 0"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/daily_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories burned: 0"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/daily_kilometers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kilometers traveled: 0.0 km"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Weekly Progress Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_weekly_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_daily_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/weekly_progress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Progress"
                android:scaleType="centerCrop"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/weekly_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps: 0"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/weekly_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories burned: 0"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/weekly_kilometers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kilometers traveled: 0.0 km"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Monthly Progress Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_monthly_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_weekly_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/monthly_progress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Progress"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/monthly_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps: 0"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/monthly_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories burned: 0"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/monthly_kilometers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kilometers traveled: 0.0 km"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Total Progress Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_total_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_monthly_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/total_progress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Progress"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps: 0"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/total_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories burned: 0"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/total_kilometers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kilometers traveled: 0.0 km"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
